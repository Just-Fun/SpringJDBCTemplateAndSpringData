<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Thanks http://devcolibri.com/1191 -->
    <bean id="rat" class="ua.com.juja.sqlcmd.spring.LabRat">
        <constructor-arg type="String" value="Hi!"/>
        <constructor-arg type="HelloWorldService" ref="service"/>
        <property name="name" value="Alice"/>
    </bean>

    <bean id="service" class="ua.com.juja.sqlcmd.spring.HelloWorldService"/>
</beans>